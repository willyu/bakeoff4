<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowFullscreen">true</item>
  </style>

  <style name="AppButtonTheme">
    <item name="android:background">@color/colorAccent</item>
    <item name="android:padding">16dp</item>
    <item name="android:minWidth">150dp</item>
    <item name="android:textColor">@color/textPrimary</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="AppBoxButton">
    <item name="android:background">@color/optionsButton</item>
    <item name="android:layout_height">100dp</item>
    <item name="android:layout_width">100dp</item>
    <item name="android:layout_margin">8dp</item>
    <item name="android:textColor">@color/textPrimary</item>
    <item name="android:textSize">24sp</item>
    <item name="android:textAllCaps">true</item>
  </style>

  <style name="AppTextHeaderTheme">
    <item name="android:textColor">@color/textPrimary</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="AppTextTheme" parent="AppTextHeaderTheme">
    <item name="android:textSize">10sp</item>
  </style>

</resources>
